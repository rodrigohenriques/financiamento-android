<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.jinkings.financing" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="br.com.jinkings.soluciona.application.JinkingsSoluciona">
        <activity
            android:name="br.com.jinkings.soluciona.application.ui.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Login.Theme.Jinkings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.jinkings.soluciona.application.ui.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Login.Theme.Jinkings"/>

        <activity android:name="br.com.jinkings.soluciona.application.ui.SignUpActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_signup_activity"
            android:parentActivityName="br.com.jinkings.soluciona.application.ui.LoginActivity"
            tools:ignore="UnusedAttribute" />

        <activity android:name="br.com.jinkings.soluciona.application.ui.ListActivity"
            android:screenOrientation="portrait"
            android:label="Simulações" />
    </application>

</manifest>
